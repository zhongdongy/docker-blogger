{% extends 'base.jinja2' %}

{% block web_title %}发布历史 | {{ g.site_name }}{% endblock %}

{% block web_content %}
    <nav class="navbar navbar-expand sticky-top bg-primary navbar-primary">
        <div class="container">
            <div class="navbar-brand suppress-link">
                <a href="{{ g.site_home }}"><span class="ms-2 text-light">{{ g.site_name }}</span></a>
            </div>
        </div>
    </nav>
    <div class="d-block mt-3"></div>

    <div class="container">

        <div class="container markdown-rendered">
            <div class="row">
                <div class="col" id="content-container">
                    <h2>发布历史</h2>
                    <div class="container" id="post-list">
                        <div class="row gx-2 gy-2">
                            {% for year in dates %}
                                <h3 class="mt-4">{{ year }} 年</h3>
                                {% for month in dates[year] %}
                                    <h2>{{ month }} 月</h2>
                                    {% for day in dates[year][month] %}
                                        {% for post in dates[year][month][day] %}
                                            <div class="col col-6">
                                                <a href="/post/{{ post.name }}/">
                                                    <div class="card">
                                                    <div class="card-body d-flex justify-content-between">
                                                        <span>{{ post.title }}</span>
                                                        <span class="text-secondary">{{ post.author }}</span>
                                                    </div>
                                                </div>
                                                </a>
                                            </div>
                                        {% endfor %}
                                    {% endfor %}

                                {% endfor %}
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}