{% extends 'base.jinja2' %}

{% block web_title %}发布历史 ({{ month }}) | {{ g.site_name }}{% endblock %}

{% block web_content %}
    <nav class="navbar navbar-expand sticky-top bg-primary navbar-primary">
        <div class="container">
            <div class="navbar-brand suppress-link">
                <a href="{{ g.site_home }}"><span class="ms-2 text-light">{{ g.site_name }}</span></a>
            </div>
        </div>
    </nav>
    <div class="d-block mt-3"></div>

    <div class="container">

        <div class="container markdown-rendered">
            <div class="row">
                <div class="col" id="content-container">
                    <h2>发布历史 ({{ month }})</h2>
                    <p><a href="/archives/{{ year }}/">当年</a> <a href="/archives/">全部历史</a></p>
                    <div class="container" id="post-list">
                        <div class="row gx-2 gy-2">
                            {% for post in posts %}
                                <div class="col col-12 col-md-6">
                                    <a class="link-unstyled" href="/post/{{ post.name }}/">
                                        <div class="card">
                                            <div class="card-body d-flex justify-content-between align-items-middle">
                                                <div class="d-flex flex-column align-items-start">
                                                    <span class="d-block re-link-style">{{ post.title }}</span>
                                                    <span class="text-muted">{{ post.date }}</span>
                                                </div>
                                                <span class="text-secondary">{{ post.author }}</span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}